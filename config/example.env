# WatermarkEvil Configuration

# Environment
WATERMARK_EVIL_MODE=development  # development/production
DEBUG=true
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_TIMEOUT=30
API_KEY=your-secret-api-key-here
CORS_ORIGINS=["http://localhost:3000", "https://your-frontend-domain.com"]

# Security
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60  # seconds
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=["image/jpeg", "image/png", "image/webp"]

# Processing
GPU_ENABLED=true
CUDA_VISIBLE_DEVICES=0,1
MAX_BATCH_SIZE=16
PROCESSING_TIMEOUT=300  # seconds
DEFAULT_IMAGE_SIZE=1024  # max dimension
PRESERVE_EXIF=false
OUTPUT_QUALITY=95

# Detection Engine
DETECTION_CONFIDENCE_THRESHOLD=0.5
DETECTION_IOU_THRESHOLD=0.3
DETECTION_MAX_DETECTIONS=10
DETECTION_MODEL_PATH=models/detection/
PATTERN_DB_PATH=data/patterns/

# Reconstruction Engine
RECONSTRUCTION_QUALITY=high  # low/medium/high
RECONSTRUCTION_METHOD=hybrid  # inpainting/diffusion/frequency/hybrid
RECONSTRUCTION_MODEL_PATH=models/reconstruction/
TEMP_FILES_PATH=temp/

# Learning System
LEARNING_ENABLED=true
MIN_SAMPLES_FOR_TRAINING=1000
TRAINING_INTERVAL=86400  # 24 hours
MODEL_BACKUP_ENABLED=true
MODEL_BACKUP_PATH=backups/
EXPORT_METRICS=true

# Database
DB_TYPE=postgresql
DB_HOST=localhost
DB_PORT=5432
DB_NAME=watermark_evil
DB_USER=admin
DB_PASSWORD=your-password-here
DB_SSL_MODE=prefer

# Redis Cache
REDIS_ENABLED=true
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=your-redis-password
CACHE_TTL=3600  # 1 hour

# Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_ENABLED=true
GRAFANA_PORT=3000
SENTRY_ENABLED=true
SENTRY_DSN=your-sentry-dsn
HEALTHCHECK_ENABLED=true
HEALTHCHECK_INTERVAL=60  # seconds

# Storage
STORAGE_TYPE=local  # local/s3/azure
LOCAL_STORAGE_PATH=storage/
S3_BUCKET=your-bucket-name
S3_REGION=us-west-2
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key

# Email Notifications
SMTP_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
NOTIFICATION_EMAIL=admin@your-domain.com

# Development Tools
SWAGGER_ENABLED=true
PROFILER_ENABLED=true
TEST_MODE=false
MOCK_SERVICES=false
